# Пример конфигурации переменных окружения
# Скопируйте этот файл в .env и установите значения

# Режим приложения: development, testing, production
FLASK_ENV=development

# Секретный ключ (ИЗМЕНИТЕ на продакшене!)
SECRET_KEY=your-secret-key-change-in-production

# Режим отладки
DEBUG=True

# База данных
DATABASE_URL=sqlite:///version_tracker.db

# GitHub Token для API (опционально, но рекомендуется для большего лимита запросов)
GITHUB_TOKEN=

# Интервал проверки обновлений (в часах)
UPDATE_CHECK_INTERVAL=6
